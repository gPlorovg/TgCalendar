DROP TABLE calendars, marks;
-- В таблице users пока нет необходимости
-- CREATE TABLE users
-- (
--     chat_id       BIGINT,
--     username      VARCHAR(32),
--     prefer_names  VARCHAR(64)[5]
-- );
CREATE TABLE marks
(
    event_id         BIGINT,
    chat_id          BIGINT,
    username         VARCHAR(32),
    positions        BOOLEAN[35]
);
CREATE TABLE calendars
(
    event_id         BIGINT,
    group_id         BIGINT,
    event_name       VARCHAR(60),
    calendar_grid    VARCHAR(10)[35],
    active           BOOLEAN
);